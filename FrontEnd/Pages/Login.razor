@page "/login"

<PageTitle>Login</PageTitle>

<!-- Pills navs -->
<div class="w-100 h-100 m-auto" style="max-width: 400px">

    <!-- Pills content -->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="loginName">Email</label>
                    <input type="email" id="loginName" class="form-control"/>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="loginPassword">Password</label>
                    <input type="password" id="loginPassword" class="form-control"/>
                </div>

                <!-- 2 column grid layout -->
                <div class="d-flex mb-4">
                    <div class="col-6 d-flex justify-content-start" style="text-align: left">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <input class="form-check-input" type="checkbox" value="" id="loginCheck"/>
                            <label class="form-check-label" for="loginCheck"> Remember me </label>
                        </div>
                    </div>

                    <div class="col-6 d-flex justify-content-end" style="text-align: right">
                        <!-- Simple link -->
                        <a href="#!">Forgot password?</a>
                    </div>
                </div>
                <div class="w-100 d-flex">
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block px-5 mb-4 m-auto">Login</button>
                </div>
                <div class="w-100 d-flex">
                    
                    <a href="/register" class="btn btn-link btn-block px-5 m-auto">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>